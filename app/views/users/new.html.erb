<h1>Hello! Send message to your friend</h1>
 
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
 
  <p><%= f.label :name %><br>
  <%= f.text_field :name%></p>
 
  <p><%= f.label :message %><br>
  <%= f.text_field :email%></p>
  
  <p><%= f.label :phone %><br>
  <%= f.text_field :phone%></p>
 
  
  
 
  <%= f.submit"Submit" %>
<% end %>